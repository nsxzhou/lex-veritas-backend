# LexVeritas Backend Environment Variables
# 复制此文件为 .env 并填入实际值
# 环境变量格式: LEXVERITAS_<SECTION>_<KEY>

# ================================
# Server Configuration
# ================================
LEXVERITAS_SERVER_PORT=8080
LEXVERITAS_SERVER_MODE=debug  # debug | release | test

# ================================
# Database (PostgreSQL)
# ================================
LEXVERITAS_DATABASE_HOST=localhost
LEXVERITAS_DATABASE_PORT=5432
LEXVERITAS_DATABASE_USER=lexveritas
LEXVERITAS_DATABASE_PASSWORD=your_database_password_here
LEXVERITAS_DATABASE_DBNAME=lexveritas
LEXVERITAS_DATABASE_SSLMODE=disable

# ================================
# Redis
# ================================
LEXVERITAS_REDIS_HOST=localhost
LEXVERITAS_REDIS_PORT=6379
LEXVERITAS_REDIS_PASSWORD=your_redis_password_here
LEXVERITAS_REDIS_DB=0

# ================================
# Milvus (Vector Database)
# ================================
# 本地 Milvus 配置
# LEXVERITAS_MILVUS_HOST=localhost
# LEXVERITAS_MILVUS_PORT=19530

# Zilliz Cloud 配置（二选一）
# LEXVERITAS_MILVUS_HOST=https://in01-xxxxxxxx.api.gcp-us-west1.zillizcloud.com
# LEXVERITAS_MILVUS_API_KEY=your_zilliz_api_key_here
# LEXVERITAS_MILVUS_USE_CLOUD=true

# ================================
# JWT Authentication
# ================================
LEXVERITAS_JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters

# ================================
# Email Configuration
# ================================
LEXVERITAS_EMAIL_PROVIDER=smtp  # smtp | resend

# SMTP Settings (if provider=smtp)
LEXVERITAS_EMAIL_SMTP_HOST=smtp.qq.com
LEXVERITAS_EMAIL_SMTP_PORT=587
LEXVERITAS_EMAIL_SMTP_USER=your_smtp_username
LEXVERITAS_EMAIL_SMTP_PASSWORD=your_smtp_password_or_app_key

# Resend Settings (if provider=resend)
LEXVERITAS_EMAIL_RESEND_API_KEY=your_resend_api_key

# From Address
LEXVERITAS_EMAIL_FROM_ADDRESS=noreply@example.com
LEXVERITAS_EMAIL_FROM_NAME=LexVeritas
